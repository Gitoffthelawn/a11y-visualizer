{
  "name": "@a11y-visualizer/target-enlarger",
  "description": "Browser extension to enlarge small interactive targets for improved accessibility",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "lint": "prettier . --check && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint-fix": "prettier . --write && eslint . --ext ts,tsx --fix",
    "test": "vitest run --config vite.test.config.ts",
    "test:watch": "vitest --config vite.test.config.ts",
    "postinstall": "wxt prepare",
    "bump_version": "pnpm version --no-git-tag-version"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitest/browser": "^3.2.2",
    "@wxt-dev/module-react": "^1.1.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "playwright": "^1.52.0",
    "postcss": "^8.5.4",
    "prettier": "3.2.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.0",
    "wxt": "^0.20.7"
  }
}
