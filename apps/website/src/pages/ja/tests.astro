---
import ImageTests from "../../components/tests/ImageTests.astro";
import ButtonTests from "../../components/tests/ButtonTests.astro";
import LinkTests from "../../components/tests/LinkTests.astro";
import FormControlTests from "../../components/tests/FormControlTests.astro";
import HeadingTests from "../../components/tests/HeadingTests.astro";
import TableTests from "../../components/tests/TableTests.astro";
import AriaHiddenTests from "../../components/tests/AriaHiddenTests.astro";
import LayoutTests from "../../components/tests/LayoutTests.astro";
import LiveRegionTests from "../../components/tests/LiveRegionTests.astro";
import Warning from "../../components/tests/Warning.astro";

export const prerender = true;
import { createLocalT } from "../../lib/i18n";
import pageJa from "./tests.lang";
import pageEn from "../tests.lang";
const t = createLocalT(pageJa, pageEn);
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/a11y-visualizer/icon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>テスト用ページ - Accessibility Visualizer</title>
    <meta
      name="description"
      content="Test examples for Accessibility Visualizer browser extension with intentionally problematic accessibility patterns"
    />
    <meta name="robots" content="noindex, nofollow" />
  </head>
  <body
    class="bg-zinc-50 dark:bg-zinc-900 text-zinc-800 dark:text-zinc-300 transition-colors"
  >
    <div class="min-h-screen">
      <header
        class="bg-white dark:bg-zinc-900 shadow-sm border-b border-zinc-200 dark:border-zinc-700"
      >
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
          <div class="flex items-center">
            <a href="/a11y-visualizer/ja/" class="flex items-center">
              <img
                src="/a11y-visualizer/icon.svg"
                alt=""
                class="w-12 h-12 mr-4"
              />
              <div>
                <h1 class="text-3xl font-bold text-teal-700 dark:text-teal-200">
                  Accessibility Visualizer
                </h1>
                <p
                  class="text-sm sm:text-base text-zinc-600 dark:text-zinc-400"
                >
                  {t("header.subtitle")}
                </p>
              </div>
            </a>
          </div>
        </div>
      </header>

      <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <Warning lang="ja" />

        <div class="mb-8">
          <h2 class="text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
            {t("intro.title")}
          </h2>
          <p class="text-lg text-zinc-700 dark:text-zinc-300 max-w-4xl">
            {t("intro.desc")}
          </p>
        </div>

        <!-- コンポーネント（見出しのみ日本語に対応） -->
        <ImageTests lang="ja" />
        <HeadingTests lang="ja" />
        <ButtonTests lang="ja" />
        <LinkTests lang="ja" />
        <FormControlTests lang="ja" />
        <TableTests lang="ja" />
        <LayoutTests lang="ja" />
        <LiveRegionTests lang="ja" />
        <AriaHiddenTests lang="ja" />
      </main>

      <footer
        class="bg-zinc-900 dark:bg-zinc-950 text-zinc-300 dark:text-zinc-400 py-8"
      >
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <p>
            © 2024 ymrl (MIT License)
            <a
              href="https://github.com/ymrl/a11y-visualizer"
              class="text-teal-400 dark:text-teal-300 hover:text-teal-300 dark:hover:text-teal-200 underline"
              >GitHub</a
            >.
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
