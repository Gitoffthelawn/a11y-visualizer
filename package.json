{
  "name": "a11y-visualizer",
  "private": true,
  "version": "5.5.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @a11y-visualizer/browser-extension run dev",
    "test": "pnpm --filter @a11y-visualizer/* test",
    "build": "cd apps/browser_extension && pnpm run build",
    "build:firefox": "cd apps/browser_extension && pnpm run build:firefox",
    "zip": "cd apps/browser_extension && pnpm run zip",
    "zip:firefox": "cd apps/browser_extension && pnpm run zip:firefox",
    "lint": "run-p lint:*",
    "lint:monorepo": "prettier . --check && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:packages": "pnpm --filter @a11y-visualizer/* lint",
    "lint-fix": "run-p lint-fix:*",
    "lint-fix:monorepo": "prettier . --write && eslint . --ext ts,tsx --fix",
    "lint-fix:packages": "pnpm --filter @a11y-visualizer/* lint-fix",
    "bump_version:packages": "pnpm --filter @a11y-visualizer/* --no-git-tag-version bump_version",
    "bump_version": "pnpm version --no-git-tag-version",
    "release": "tsx scripts/release.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.12.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.52.0",
    "prettier": "3.2.5",
    "semver": "^7.6.0",
    "typescript": "^5.2.2"
  }
}
