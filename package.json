{
  "name": "a11y-visualizer",
  "private": true,
  "version": "5.5.0",
  "type": "module",
  "scripts": {
    "dev:browser": "cd apps/browser_extension && pnpm run dev",
    "dev:test": "cd apps/test_site && pnpm run dev",
    "build": "cd apps/browser_extension && pnpm run build",
    "build:firefox": "cd apps/browser_extension && pnpm run build:firefox",
    "zip": "cd apps/browser_extension && pnpm run zip",
    "zip:firefox": "cd apps/browser_extension && pnpm run zip:firefox",
    "lint": "cd apps/browser_extension && pnpm run lint && cd ../test_site && pnpm run lint",
    "test": "cd apps/browser_extension && pnpm run test && cd ../test_site && pnpm run test",
    "lint:browser": "cd apps/browser_extension && pnpm run lint",
    "lint:test": "cd apps/test_site && pnpm run lint",
    "test:browser": "cd apps/browser_extension && pnpm run test",
    "test:test": "cd apps/test_site && pnpm run test",
    "format": "prettier --write .",
    "release": "tsx scripts/release.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "dom-accessibility-api": "^0.6.3",
    "i18next": "^23.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.0",
    "react-icons": "^5.0.1",
    "react-shadow": "^20.4.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.32",
    "@eslint/js": "^9.28.0",
    "@markuplint/jsx-parser": "^4.7.2",
    "@markuplint/react-spec": "^4.5.2",
    "@types/chrome": "^0.0.265",
    "@types/jsdom": "^21.1.6",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/browser": "^3.0.9",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.12.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "markuplint": "^4.8.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.45.1",
    "postcss": "^8.4.38",
    "prettier": "3.2.5",
    "semver": "^7.6.0",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.2",
    "typescript": "^5.2.2",
    "vite": "^6.2.2",
    "vitest": "^3.0.9"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{md,json,yml,html,css}": [
      "prettier --write"
    ]
  }
}
