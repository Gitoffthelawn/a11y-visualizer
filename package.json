{
  "name": "a11y-visualizer",
  "private": true,
  "version": "5.5.0",
  "type": "module",
  "scripts": {
    "dev:browser": "cd apps/browser_extension && pnpm run dev",
    "dev:test": "cd apps/test_site && pnpm run dev",
    "build": "cd apps/browser_extension && pnpm run build",
    "build:firefox": "cd apps/browser_extension && pnpm run build:firefox",
    "zip": "cd apps/browser_extension && pnpm run zip",
    "zip:firefox": "cd apps/browser_extension && pnpm run zip:firefox",
    "lint": "cd apps/browser_extension && pnpm run lint && cd ../test_site && pnpm run lint",
    "test": "cd apps/browser_extension && pnpm run test && cd ../test_site && pnpm run test",
    "lint:browser": "cd apps/browser_extension && pnpm run lint",
    "lint:test": "cd apps/test_site && pnpm run lint",
    "test:browser": "cd apps/browser_extension && pnpm run test",
    "test:test": "cd apps/test_site && pnpm run test",
    "format": "prettier --write .",
    "release": "tsx scripts/release.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.12.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "3.2.5",
    "semver": "^7.6.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.{md,json,yml,html,css}": [
      "prettier --write"
    ]
  }
}
