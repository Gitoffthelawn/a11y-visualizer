{
  "name": "a11y-visualizer",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:firefox": "vite --config vite.firefox.config.ts",
    "build": "run-p build:*",
    "build:firefox": "tsc && vite build --config vite.firefox.config.ts",
    "build:chrome": "tsc && vite build",
    "clean": "run-p clean:*",
    "clean:firefox": "rm -rf dist-firefox",
    "clean:chrome": "rm -rf dist",
    "zip": "run-p zip:*",
    "zip:firefox": "cd dist-firefox && zip -r ../a11y-visualizer-firefox.zip *",
    "zip:chrome": "cd dist && zip -r ../a11y-visualizer-chrome.zip *",
    "package": "run-s clean build zip",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "release": "tsx scripts/release.ts",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "dom-accessibility-api": "^0.6.3",
    "i18next": "^23.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.0",
    "react-icons": "^5.0.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@types/chrome": "^0.0.265",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "prettier": "3.2.5",
    "semver": "^7.6.0",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.7.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint"
    ]
  }
}
